<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryLight"
    tools:context=".newmemberemail">

    <LinearLayout
        android:id="@+id/addmemberemailheader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@color/colorPrimary"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/addmemberemailimageView"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:adjustViewBounds="false"
            android:src="@mipmap/smartservelogos" />

        <TextView
            android:id="@+id/addmemberemailgroupname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginEnd="5dp"
            android:layout_marginTop="5dp"
            android:textSize="25sp"
            android:textStyle="bold" />

        <View
            android:id="@+id/addmemberemailsep1"
            android:layout_width="match_parent"
            android:layout_height="7dp"
            android:layout_marginStart="50dp"
            android:layout_marginTop="5dp"
            android:background="@color/colorComplement" />

    </LinearLayout>

    <EditText
        android:id="@+id/emailField"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@id/addmemberemailheader"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="120dp"
        android:ems="10"
        android:hint="Enter Email"
        android:inputType="textEmailAddress"
        android:padding="15dp"
        tools:layout_editor_absoluteX="85dp"
        tools:layout_editor_absoluteY="199dp" />

    <EditText
        android:id="@+id/passwordField"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/emailField"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="40dp"
        android:ems="10"
        android:hint="Enter Password"
        android:inputType="textPassword"
        android:padding="15dp"
        tools:layout_editor_absoluteX="85dp"
        tools:layout_editor_absoluteY="272dp" />

    <Button
        android:id="@+id/registerbtn"
        style="@android:style/Widget.Holo.Button"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/buttons"
        android:elevation="7dp"
        android:text="REGISTER"
        tools:layout_editor_absoluteX="147dp"
        tools:layout_editor_absoluteY="450dp" />

</RelativeLayout>