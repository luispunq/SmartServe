<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".balancesheet">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


    <RelativeLayout
        android:id="@+id/supportheader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@color/colorPrimary">


        <TextView
            android:id="@+id/textView"
            android:layout_width="358dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:text="SMART SERVE CAPITAL LIMITED"
            android:textAlignment="center"
            android:textSize="30sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textViews"
            android:layout_width="358dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="false"
            android:layout_below="@+id/textView"
            android:layout_centerHorizontal="true"
            android:text="'For your financial needs'"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textStyle="italic" />

        <TextView
            android:layout_width="358dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="false"
            android:layout_below="@+id/textViews"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:text="FINANCIAL POSITION"
            android:textAlignment="center"
            android:textSize="25sp"
            android:textStyle="bold" />
    </RelativeLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_below="@id/supportheader">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v7.widget.CardView
                android:id="@+id/assets"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="10dp">

                <LinearLayout
                    android:id="@+id/gstat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/gtitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginStart="10dp"
                        android:clickable="true"
                        android:fadingEdge="vertical"
                        android:focusable="true"
                        android:padding="2dp"
                        android:text="Assets"
                        android:textAllCaps="true"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <HorizontalScrollView
                        android:id="@+id/dailyitems"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="20dp"
                        android:fillViewport="false">

                        <RelativeLayout
                            android:id="@+id/dailytop"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:visibility="visible">

                            <TableRow
                                android:id="@+id/datebo2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentStart="false"
                                android:layout_alignParentTop="false"
                                android:layout_below="@+id/advancesto"
                                android:background="@color/colorPrimaryDark"
                                android:showDividers="middle">

                                <TextView
                                    android:layout_width="500dp"
                                    android:layout_height="wrap_content"
                            android:textSize="15sp"
                                    android:background="@drawable/celloutline"
                                    android:padding="5dp"
                                    android:text="Total" />

                                <TextView
                                    android:id="@+id/totdr"
                                    android:layout_width="200dp"
                                    android:layout_height="wrap_content"
                            android:textSize="15sp"
                                    android:layout_marginStart="0dp"
                                    android:background="@drawable/celloutline"
                                    android:padding="5dp"
                                    android:text="" />

                                <TextView
                                    android:id="@+id/totcr"
                                    android:layout_width="150dp"
                                    android:layout_height="wrap_content"
                            android:textSize="15sp"
                                    android:background="@drawable/celloutline"
                                    android:padding="5dp"
                                    android:text="" />


                            </TableRow>

                            <TableRow
                                android:id="@+id/datebo"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentStart="false"
                                android:layout_alignParentTop="true"
                                android:background="@color/colorPrimaryDark"
                                android:showDividers="middle">

                                <TextView
                                    android:layout_width="500dp"
                                    android:layout_height="wrap_content"
                            android:textSize="15sp"
                                    android:background="@drawable/celloutline"
                                    android:padding="5dp"
                                    android:text="Assets" />

                                <TextView
                                    android:id="@+id/yearlebo"
                                    android:layout_width="200dp"
                                    android:layout_height="wrap_content"
                            android:textSize="15sp"
                                    android:layout_marginStart="0dp"
                                    android:background="@drawable/celloutline"
                                    android:padding="5dp"
                                    android:text="2018" />

                                <TextView
                                    android:id="@+id/lastyear"
                                    android:layout_width="150dp"
                                    android:layout_height="wrap_content"
                            android:textSize="15sp"
                                    android:background="@drawable/celloutline"
                                    android:padding="5dp"
                                    android:text="2017" />


                            </TableRow>

                            <TableRow
                                android:id="@+id/cashbank"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentStart="false"
                                android:layout_alignParentTop="false"
                                android:layout_below="@+id/datebo"
                                android:showDividers="middle">

                                <TextView
                                    android:layout_width="500dp"
                                    android:layout_height="wrap_content"
                            android:textSize="15sp"
                                    android:background="@drawable/celloutline"
                                    android:padding="5dp"
                                    android:text="Cash/Bank" />

                                <TextView
                                    android:id="@+id/cashdr"
                                    android:layout_width="200dp"
                                    android:layout_height="wrap_content"
                            android:textSize="15sp"
                                    android:layout_marginStart="0dp"
                                    android:background="@drawable/celloutline"
                                    android:padding="5dp"
                                    android:text="" />

                                <TextView
                                    android:id="@+id/cashcr"
                                    android:layout_width="150dp"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/celloutline"
                                    android:padding="5dp"
                                    android:text="Kshs. 0"
                                    android:textSize="15sp" />


                            </TableRow>

                            <TableRow
                                android:id="@+id/loansto"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentStart="false"
                                android:layout_alignParentTop="false"
                                android:layout_below="@+id/cashbank"
                                android:showDividers="middle">

                                <TextView
                                    android:layout_width="500dp"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/celloutline"
                                    android:padding="5dp"
                                    android:text="Long Term Loans"
                                    android:textSize="15sp" />

                                <TextView
                                    android:id="@+id/loansgvdr"
                                    android:layout_width="200dp"
                                    android:layout_height="wrap_content"
                            android:textSize="15sp"
                                    android:layout_marginStart="0dp"
                                    android:background="@drawable/celloutline"
                                    android:padding="5dp"
                                    android:text="" />

                                <TextView
                                    android:id="@+id/loansgvcr"
                                    android:layout_width="150dp"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/celloutline"
                                    android:padding="5dp"
                                    android:text="Kshs. 0"
                                    android:textSize="15sp" />


                            </TableRow>

                            <TableRow
                                android:id="@+id/advancesto"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentStart="false"
                                android:layout_alignParentTop="false"
                                android:layout_below="@+id/loansto"
                                android:showDividers="middle">

                                <TextView
                                    android:layout_width="500dp"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/celloutline"
                                    android:padding="5dp"
                                    android:text="Short Term Loans"
                                    android:textSize="15sp" />

                                <TextView
                                    android:id="@+id/advgvdr"
                                    android:layout_width="200dp"
                                    android:layout_height="wrap_content"
                            android:textSize="15sp"
                                    android:layout_marginStart="0dp"
                                    android:background="@drawable/celloutline"
                                    android:padding="5dp"
                                    android:text="" />

                                <TextView
                                    android:id="@+id/advgvcr"
                                    android:layout_width="150dp"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/celloutline"
                                    android:padding="5dp"
                                    android:text="Kshs. 0"
                                    android:textSize="15sp" />


                            </TableRow>


                        </RelativeLayout>


                    </HorizontalScrollView>

                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/lia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/assets"
                android:layout_marginTop="10dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginStart="10dp"
                        android:clickable="true"
                        android:fadingEdge="vertical"
                        android:focusable="true"
                        android:padding="2dp"
                        android:text="Liabilities"
                        android:textAllCaps="true"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <HorizontalScrollView
                        android:id="@+id/liabilities"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/dailyitems"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="20dp"
                        android:fillViewport="false">

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:visibility="visible">

                            <TableRow
                                android:id="@+id/datebo22lia"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentStart="false"
                                android:layout_alignParentTop="false"
                                android:layout_below="@+id/memdepo"
                                android:background="@color/colorPrimaryDark"
                                android:showDividers="middle">

                                <TextView
                                    android:layout_width="500dp"
                                    android:layout_height="wrap_content"
                            android:textSize="15sp"
                                    android:background="@drawable/celloutline"
                                    android:padding="5dp"
                                    android:text="Total" />

                                <TextView
                                    android:id="@+id/liatotdr"
                                    android:layout_width="200dp"
                                    android:layout_height="wrap_content"
                            android:textSize="15sp"
                                    android:layout_marginStart="0dp"
                                    android:background="@drawable/celloutline"
                                    android:padding="5dp"
                                    android:text="" />

                                <TextView
                                    android:id="@+id/liatotcr"
                                    android:layout_width="150dp"
                                    android:layout_height="wrap_content"
                            android:textSize="15sp"
                                    android:background="@drawable/celloutline"
                                    android:padding="5dp"
                                    android:text="" />


                            </TableRow>

                            <TableRow
                                android:id="@+id/datebolia"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentStart="false"
                                android:layout_alignParentTop="true"
                                android:background="@color/colorPrimaryDark"
                                android:showDividers="middle">

                                <TextView
                                    android:layout_width="500dp"
                                    android:layout_height="wrap_content"
                            android:textSize="15sp"
                                    android:background="@drawable/celloutline"
                                    android:padding="5dp"
                                    android:text="Liabilities" />

                                <TextView
                                    android:id="@+id/yearlebol"
                                    android:layout_width="200dp"
                                    android:layout_height="wrap_content"
                            android:textSize="15sp"
                                    android:layout_marginStart="0dp"
                                    android:background="@drawable/celloutline"
                                    android:padding="5dp"
                                    android:text="2018" />

                                <TextView
                                    android:id="@+id/lastyearl"
                                    android:layout_width="150dp"
                                    android:layout_height="wrap_content"
                            android:textSize="15sp"
                                    android:background="@drawable/celloutline"
                                    android:padding="5dp"
                                    android:text="2017" />


                            </TableRow>

                            <TableRow
                                android:id="@+id/memdepo"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentStart="false"
                                android:layout_alignParentTop="false"
                                android:layout_below="@+id/datebolia"
                                android:showDividers="middle">

                                <TextView
                                    android:layout_width="500dp"
                                    android:layout_height="wrap_content"
                            android:textSize="15sp"
                                    android:background="@drawable/celloutline"
                                    android:padding="5dp"
                                    android:text="Member Savings" />

                                <TextView
                                    android:id="@+id/liacashdr"
                                    android:layout_width="200dp"
                                    android:layout_height="wrap_content"
                            android:textSize="15sp"
                                    android:layout_marginStart="0dp"
                                    android:background="@drawable/celloutline"
                                    android:padding="5dp"
                                    android:text="" />

                                <TextView
                                    android:id="@+id/liacashcr"
                                    android:layout_width="150dp"
                                    android:layout_height="wrap_content"
                                    android:textSize="15sp"
                                    android:background="@drawable/celloutline"
                                    android:padding="5dp"
                                    android:text="" />


                            </TableRow>


                        </RelativeLayout>


                    </HorizontalScrollView>

                </LinearLayout>

            </android.support.v7.widget.CardView>

        </RelativeLayout>
    </ScrollView>
        </RelativeLayout>
    </ScrollView>


</RelativeLayout>